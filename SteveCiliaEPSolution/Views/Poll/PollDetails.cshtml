@model Domain.Models.Poll

@{
    ViewData["Title"] = "Poll Details";
}

<div class="container mt-4">
    <h1 class="mb-4">Poll Details</h1>

    <div class="card mb-4">
        <div class="card-header">
            <h4 class="mb-0">@Model.Title</h4>
        </div>
        <div class="card-body">
            <div class="row mb-2">
                <div class="col-sm-4 fw-bold">Option 1</div>
                <div class="col-sm-8">@Model.OptionlText</div>
            </div>
            <div class="row mb-2">
                <div class="col-sm-4 fw-bold">Option 2</div>
                <div class="col-sm-8">@Model.Option2Text</div>
            </div>
            <div class="row mb-2">
                <div class="col-sm-4 fw-bold">Option 3</div>
                <div class="col-sm-8">@Model.Option3Text</div>
            </div>

            <hr />

            <div class="row mb-2">
                <div class="col-sm-4 fw-bold">Votes for Option 1</div>
                <div class="col-sm-8">@Model.Option1VotesCount</div>
            </div>
            <div class="row mb-2">
                <div class="col-sm-4 fw-bold">Votes for Option 2</div>
                <div class="col-sm-8">@Model.Option2VotesCount</div>
            </div>
            <div class="row mb-2">
                <div class="col-sm-4 fw-bold">Votes for Option 3</div>
                <div class="col-sm-8">@Model.Option3VotesCount</div>
            </div>

            <div class="row mt-3">
                <div class="col-sm-4 fw-bold">Created At</div>
                <div class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0 text-dark">Cast Your Vote</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-action="Vote" asp-route-pollId="@Model.Id">
                <div class="form-check mb-2">
                    <input class="form-check-input" type="radio" name="option" value="1" id="option1">
                    <label class="form-check-label" for="option1">@Model.OptionlText</label>
                </div>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="radio" name="option" value="2" id="option2">
                    <label class="form-check-label" for="option2">@Model.Option2Text</label>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="radio" name="option" value="3" id="option3">
                    <label class="form-check-label" for="option3">@Model.Option3Text</label>
                </div>
                <button type="submit" class="btn btn-primary">Vote</button>
            </form>
        </div>
    </div>

    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
